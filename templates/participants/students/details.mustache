{{< block_sic/layout}}
    {{$ content}}
        {{#student}}
            <div class="card">
                <div class="card-header hstack hstack-sm gap-3">
                    <h2>Detalles estudiante</h2>
                    <a href="#" class="btn btn-outline-primary">Cambiar Estado</a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <div class="col-md-6">
                            <dt>ID</dt>
                            <dd>{{id}}</dd>
                            <dt>Nombre</dt>
                            <dd>{{name}}</dd>
                            <dt>Rut</dt>
                            <dd>{{rut}}</dd>
                            <dt>Rol</dt>
                            <dd>{{role}}</dd>
                        </div>
                        <div class="col-md-6">
                            <dt>Estado</dt>
                            <dd class="badge
                            {{#studying}}badge-primary{{/studying}}
                            {{#approved}}badge-success{{/approved}}
                            {{#reproved}}badge-danger{{/reproved}}">
                                {{state}}
                            </dd>
                            <dt>Avance</dt>
                            <dd>{{progress}}%</dd>
                            <dt>Tiempo conexion</dt>
                            <dd>{{hours}} horas</dd>
                            <dt>Promedio</dt>
                            <dd>{{average}}</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2>Actividades</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Obligatoria</th>
                                <th>Completada</th>
                                <th>Nota</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#activities}}
                                <tr>
                                    <td>{{code}}</td>
                                    <td>{{type}}</td>
                                    <td>{{mandatory}}</td>
                                    <td>{{completed}}</td>
                                    <td>{{grade}}</td>
                                </tr>
                            {{/activities}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card">
                <div class="card-header hstack hstack-sm gap-3">
                    <h2>Clases</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Acciones</th>
                                <th>Nombre</th>
                                <th>Fecha</th>
                                <th>Duracion</th>
                                <th>Presente</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#lessons}}
                                <tr>
                                    <td>
                                        <a href="#" class="btn btn-outline-primary">Marcar Asistencia</a>
                                    </td>
                                    <td>{{code}}</td>
                                    <td>{{date}}</td>
                                    <td>{{duration}} minutos</td>
                                    <td>{{assist}}</td>
                                </tr>
                            {{/lessons}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/student}}
    {{/ content}}
{{/ block_sic/layout}}
