{{< block_sic/layout}}
    {{$ content}}
        {{#participants}}
            <div class="grid gap-3">
                <div class="card">
                    <div class="card-header">
                        <h2>Gestor</h2>
                    </div>
                    <div class="card-body">
                        <dl>
                            <dt>ID</dt>
                            <dd>{{manager.id}}</dd>
                            <dt>Nombre</dt>
                            <dd>{{manager.name}}</dd>
                            <dt>Rut</dt>
                            <dd>{{manager.rut}}</dd>
                            <dt>Rol</dt>
                            <dd>{{manager.role}}</dd>
                        </dl>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2>Moderadores</h2>
                    </div>
                    <div class="card-body">
                        <div class="scroll-2">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Rut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#moderators}}
                                        <tr>
                                            <td>{{id}}</td>
                                            <td>{{name}}</td>
                                            <td>{{rut}}</td>
                                        </tr>
                                    {{/moderators}}
                                </tbody>
                            </table>
                            {{^moderators}}
                                <p class="alert alert-warning">No hay moderadores registrados!</p>
                            {{/moderators}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2>Profesores</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Rut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#teachers}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{rut}}</td>
                                </tr>
                            {{/teachers}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card">
                <div class="card-header hstack hstack-sm gap-3">
                    <h2>Estudiantes</h2>
                    {{> block_sic/participants/studentsactionbar}}
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Rut</th>
                                <th>Avance</th>
                                <th>Tiempo Conexion</th>
                                <th>Promedio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#students}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{rut}}</td>
                                    <td>0%</td>
                                    <td>0 horas</td>
                                    <td>0</td>
                                    <td>
                                        <a href="#" class="btn btn-outline-primary">Detalles</a>
                                    </td>
                                </tr>
                            {{/students}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/participants}}
    {{/ content}}
{{/ block_sic/layout}}
